{
  "name": "react-dapp",
  "version": "0.0.1",
  "scripts": {
    "dev": "vite",
    "build": "npx hardhat compile --network localhost && tsc && vite build",
    "serve": "vite preview",
    "prepare": "husky install",
    "local-node": "npx hardhat node",
    "compile-node": "npx hardhat run scripts/deploy.js --network localhost",
    "lint:sol": "npx solhint 'contracts/**/*.sol'"
  },
  "dependencies": {
    "ethers": "5.4.7",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hot-toast": "2.1.1"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "2.0.2",
    "@nomiclabs/hardhat-etherscan": "2.1.6",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "@typechain/ethers-v5": "7.1.2",
    "@typechain/hardhat": "2.3.1",
    "@types/chai": "4.2.22",
    "@types/mocha": "9.0.0",
    "@types/node": "16.7.1",
    "@types/react": "17.0.26",
    "@types/react-dom": "17.0.9",
    "@typescript-eslint/eslint-plugin": "5.0.0",
    "@typescript-eslint/parser": "5.0.0",
    "@vitejs/plugin-react-refresh": "1.3.6",
    "chai": "4.3.4",
    "dotenv": "10.0.0",
    "eslint": "8.0.1",
    "eslint-config-productsway": "0.1.9",
    "ethereum-waffle": "3.4.0",
    "hardhat": "2.6.5",
    "husky": "7.0.2",
    "lint-staged": "11.2.3",
    "prettier": "2.4.1",
    "prettier-plugin-solidity": "1.0.0-beta.18",
    "solhint": "3.3.6",
    "solhint-plugin-prettier": "0.0.5",
    "ts-node": "10.3.0",
    "typechain": "5.2.0",
    "typescript": "4.4.4",
    "vite": "2.6.7",
    "vite-plugin-windicss": "1.4.10",
    "windicss": "3.1.9"
  },
  "lint-staged": {
    "*.sol": "solhint 'contracts/**/*.sol' --fix",
    "*.js": "eslint --cache --fix",
    "*.{js,css,md,sol}": "prettier --write"
  }
}