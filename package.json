{
  "name": "react-dapp",
  "version": "0.0.1",
  "scripts": {
    "dev": "vite",
    "build": "npx hardhat compile --network localhost && tsc && vite build",
    "serve": "vite preview",
    "prepare": "husky install",
    "local-node": "npx hardhat node",
    "compile-node": "npx hardhat run scripts/deploy.js --network localhost",
    "lint:sol": "npx solhint 'contracts/**/*.sol'"
  },
  "dependencies": {
    "ethers": "5.5.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hot-toast": "2.1.1"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "2.0.2",
    "@nomiclabs/hardhat-etherscan": "2.1.7",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "@typechain/ethers-v5": "8.0.2",
    "@typechain/hardhat": "3.0.0",
    "@types/chai": "4.2.22",
    "@types/mocha": "9.0.0",
    "@types/node": "16.11.7",
    "@types/react": "17.0.34",
    "@types/react-dom": "17.0.11",
    "@typescript-eslint/eslint-plugin": "5.3.1",
    "@typescript-eslint/parser": "5.3.1",
    "@vitejs/plugin-react-refresh": "1.3.6",
    "chai": "4.3.4",
    "dotenv": "10.0.0",
    "eslint": "8.2.0",
    "eslint-config-productsway": "0.1.9",
    "ethereum-waffle": "3.4.0",
    "hardhat": "2.6.8",
    "husky": "7.0.4",
    "lint-staged": "12.0.2",
    "prettier": "2.4.1",
    "prettier-plugin-solidity": "1.0.0-beta.19",
    "solhint": "3.3.6",
    "solhint-plugin-prettier": "0.0.5",
    "ts-node": "10.4.0",
    "typechain": "6.0.2",
    "typescript": "4.4.4",
    "vite": "2.6.14",
    "vite-plugin-windicss": "1.5.1",
    "windicss": "3.2.1"
  },
  "lint-staged": {
    "*.sol": "solhint 'contracts/**/*.sol' --fix",
    "*.js": "eslint --cache --fix",
    "*.{js,css,md,sol}": "prettier --write"
  }
}